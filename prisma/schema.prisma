generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model PortfolioProject {
  id                Int      @id @default(autoincrement())
  path              String   @unique
  title             String
  description       String
  description_large String?
  image_url         String
  url_repo          String?
  url_demo          String?
  date              DateTime @default(now())

  @@map("portfolio_projects")
}
